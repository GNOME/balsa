	* libbalsa/libbalsa.c (libbalsa_init), (ask_idle), (libbalsa_ask),
	(libbalsa_certs_destroy), (libbalsa_is_cert_known),
	(libbalsa_am_i_subthread), (libbalsa_lock_mailbox),

                               [res_init();]),
               have_res_init=yes,
               have_res_init=no)
if test $have_res_init = no ; then
    save_LIBS=$LIBS
    LIBS="$LIBS -lresolv"
    AC_LINK_IFELSE(AC_LANG_PROGRAM([#include <resolv.h>
                                   ],
                                   [res_init();]),
                   have_res_init=yes)
fi

                [AC_DEFINE([HAVE_LANGINFO],1,[Defined for langinfo.])],
                [])

# sendmail
#
if test x"$with_esmtp" = xno; then
AC_PATH_PROG(SENDMAIL, sendmail, no, $PATH:/usr/sbin:/usr/lib)

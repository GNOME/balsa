GLIB_GENMARSHAL=`pkg-config --variable=glib_genmarshal glib-2.0`

# gettext
#
ALL_LINGUAS="am ar az be bg ca cs da de dz el en_CA en_GB es et eu fi fr ga he hi hr hu id it ja ko lt lv mk ml ms nb ne nl nn oc pa pl pt pt_BR ro ru rw sk sl sq sr sr@Latn sv tr uk vi wa zh_CN zh_HK zh_TW"

msgid "Ctrl"
msgstr "Ctrl"

#: C/balsa.xml:1527(keysym)
msgid "A"
msgstr "A"

#: C/balsa.xml:1530(guimenuitem)
msgid "Select All"
msgstr "Tout sélectionner"

